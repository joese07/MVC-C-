@model MVC.Models.User

@*<link rel="stylesheet" href="https://unpkg.com/aos@2.3.1/dist/aos.css" >*@

<div class="container">
   
    <div class="d-flex justify-content-center">
    
        <div class="card" style="width:40rem;">
            <div class="card-header text-center"><h3>Change Password</h3></div>
            <div class="card-body">
                <form asp-action="ChangePassword" asp-controller="Auth">
                    <div class="form-group mb-3">
                        <label class="control-label">Old Password</label>
                        <input type="password" name="OldPassword" class="form-control" placeholder="Password" required/>
                        <span class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label class="control-label">New Password</label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Password" required/>
                        <span class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label class="control-label">Retype New Password</label>
                        <input name="retypePassword" type="password" class="form-control" placeholder="Password" required/>
                        <span class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Send" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
       

    </div>
</div>

@if (ViewBag.Message != null)
{
    <script type="text/javascript">
                    window.onload = function () {
                        alert("@ViewBag.Message");
                    }
    </script>
}
