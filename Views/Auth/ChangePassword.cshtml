@model MVC.Models.User

<h2>Change Password </h2>
<div class="container">
    <div class="card">
        <div class="card-body">
            <form asp-action="ChangePassword" asp-controller="Auth">
                <div class="form-group mb-3">
                    <label class="control-label">Old Password</label>
                    <input type="password" name="OldPassword" class="form-control" placeholder="Password" />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label class="control-label">New Password</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label class="control-label">Retype New Password</label>
                    <input name="retypePassword" type="password" class="form-control" placeholder="Password" />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Send" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@if (ViewBag.Message != null)
{
    <script type="text/javascript">
                    window.onload = function () {
                        alert("@ViewBag.Message");
                    }
    </script>
}
